<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0e0218"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"></LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Imageviewlogo"
        android:src="@mipmap/logosrijan"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_toRightOf="@+id/linearLayout2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/Imageviewlogo"
        android:background="@color/cardview_dark_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SRIJAN 2019"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/linearLayout2"
        android:layout_toEndOf="@+id/Imageviewlogo"
        android:layout_marginStart="17dp"
        android:layout_marginTop="11dp"
        android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:layout_toRightOf="@+id/Imageviewlogo"
        android:layout_marginLeft="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/Imageviewlogo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:weightSum="1"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            tools:text="TextView" />

        <ImageView
            android:id="@+id/imageViewn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/textView2"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/textView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/click"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="center"
            android:text="click to view facebook page"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="@color/cardview_dark_background"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:layout_marginRight="5dp"

        android:layout_weight="0.75"
        android:textColor="#ffffff"
        android:gravity="bottom"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="TextView"
        android:layout_alignLeft="@+id/textView2" />
</RelativeLayout>